<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textReference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Référence: "
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/textOffreId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Offre: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textAgentEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Agent: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textDuree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Durée: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textLoyer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Loyer max: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textEnfants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Enfants: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textSituationP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Situation professionnelle: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textSituationF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Situation financière: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Message: "
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            tools:text="En attente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetails" />

    </LinearLayout>
</androidx.cardview.widget.CardView>