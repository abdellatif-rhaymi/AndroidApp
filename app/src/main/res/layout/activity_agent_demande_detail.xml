<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AgentDemandeDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Statut de la demande -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statut: En attente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Section Infos Client -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informations du client"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textClientName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom complet du client"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textClientEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="client@email.com"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textClientPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Téléphone: +212 XXXXXXXX"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textClientAdresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adresse du client"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/textClientVille"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ville" />

                    <TextView
                        android:id="@+id/textClientPays"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pays" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnAppeler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appeler le client"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Détails de la demande -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Détails de la demande"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Référence: REF12345" />

                <TextView
                    android:id="@+id/textDuree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durée souhaitée: 12 mois"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textEnfants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre d'enfants: 2"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textSituationP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Situation professionnelle: CDI"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textSituationF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Situation financière: Stable"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/textMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Message: Je souhaite visiter le logement le plus rapidement possible."
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Propriété concernée -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Propriété concernée"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textLoyerMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Budget max: 5000 MAD" />

                <ImageView
                    android:id="@+id/imageOffre"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Image de la propriété" />

                <TextView
                    android:id="@+id/textTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appartement T3 Centre-ville"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description de la propriété..."
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/textPrix"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prix: 800000 MAD" />

                    <TextView
                        android:id="@+id/textLoyer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Loyer: 4500 MAD" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/textPieces"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pièces: 3" />

                    <TextView
                        android:id="@+id/textSdb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Salles de bain: 1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/textEtage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Étage: 2" />

                    <TextView
                        android:id="@+id/textSuperficie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Superficie: 75 m²" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Boutons d'action -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnAccepter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accepter"
                android:layout_marginEnd="4dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/white"
                android:backgroundTint="@color/green" />

            <Button
                android:id="@+id/btnRefuser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refuser"
                android:layout_marginStart="4dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/white"
                android:backgroundTint="@color/red" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>