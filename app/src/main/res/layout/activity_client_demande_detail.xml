<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClientDemandeDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Détails de l'Offre -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Détails de l'offre"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detailImageOffre"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image"/>

                <TextView
                    android:id="@+id/detailTextTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Titre de l'offre"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/detailTextPrix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="Prix: N/A"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/detailTextDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Description..."
                    android:textSize="14sp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:stretchColumns="*">

                    <TableRow>
                        <TextView
                            android:id="@+id/detailTextEtage"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Étage: N/A"/>

                        <TextView
                            android:id="@+id/detailTextLoyer"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Loyer: N/A"/>
                    </TableRow>

                    <TableRow android:layout_marginTop="4dp">
                        <TextView
                            android:id="@+id/detailTextPieces"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Pièces: N/A"/>

                        <TextView
                            android:id="@+id/detailTextSdb"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="SdB: N/A"/>
                    </TableRow>

                    <TableRow android:layout_marginTop="4dp">
                        <TextView
                            android:id="@+id/detailTextSuperficie"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Superficie: N/A"/>
                    </TableRow>
                </TableLayout>
                <Button
                    android:id="@+id/btnAppeler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appeler l agent"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/blue"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Détails de la Demande -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Détails de votre demande"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textDuree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Durée souhaitée: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textEnfants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre d'enfants: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textLoyerMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loyer max: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textSituationP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Situation professionnelle: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textSituationF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Situation financière: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/textMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Message: N/A"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnModifierDemande"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modifier"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSupprimerDemande"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supprimer"
                android:backgroundTint="@android:color/holo_red_light"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>